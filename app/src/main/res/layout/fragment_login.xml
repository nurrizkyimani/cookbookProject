<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.LoginFragment">


    <TextView
        android:id="@+id/cook_book"
        android:layout_width="192dp"
        android:layout_height="160dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/playfair_display"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:text="@string/cook_book"
        android:textAppearance="@style/cook_book"
        app:lineHeight="80sp" />


    <ImageView
        android:id="@+id/chef"
        android:layout_width="204dp"
        android:layout_height="526dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="134dp"
        android:elevation="1dp"
        android:src="@drawable/ic_chef" />

    <ImageView
        android:id="@+id/vas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/yellow_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="-3dp"
        android:src="@drawable/ic_vas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/yellow_view"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:layout_alignParentBottom="true"
        >

        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:layout_alignParentBottom="true"
            android:background="#F4BD4E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="178dp"
            android:layout_height="52dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button"
            android:elevation="2dp"
            android:text="login"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintEnd_toEndOf="@+id/button2" />



        <Button
            android:id="@+id/button2"
            android:layout_width="178dp"
            android:elevation="1dp"
            android:layout_height="52dp"
            android:layout_marginEnd="116dp"
            android:layout_marginBottom="68dp"
            android:text="Sign Up"
            android:textSize="18sp"
            android:background="@drawable/button2"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>

